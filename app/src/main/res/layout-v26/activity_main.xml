<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RcLapCounter">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="16dp"
        android:text="@string/rc_training_lap_counter"
        android:textColor="#9C27B0"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_below="@+id/entry_seconds"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="63dp"
        android:text="@string/start_training"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/entry_minutes"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:accessibilityLiveRegion="none"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        android:labelFor="@id/textView"
        android:text="0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@+id/entry_minutes"
        android:text="@string/min" />

    <EditText
        android:id="@+id/entry_seconds"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="108dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="numberSigned|number"
        android:text="0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@+id/entry_seconds"
        android:text="@string/sec" />

    <ListView
        android:id="@+id/list_lapTimes"
        android:layout_width="391dp"
        android:layout_height="406dp"
        android:layout_below="@+id/buttonStart"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:fadeScrollbars="true"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="true"
        android:isScrollContainer="true"
        android:verticalScrollbarPosition="right" />

</RelativeLayout>